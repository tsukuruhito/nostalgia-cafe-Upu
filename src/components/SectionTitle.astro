---
type Props = {
	title: string;
};
const { title }: Props = Astro.props;
---

<h2 id={title !== "store info" ? title : "storeinfo"}>{title}</h2>

<style>
	h2 {
		color: var(--base);
		font-size: clamp(1rem, 3vw, 2.5rem);
		display: flex;
		width: 80%;
		max-width: 350px;
		align-items: center;
		line-height: 1.5;
		text-transform: capitalize;
		word-break: keep-all;
		white-space: nowrap;
		margin-bottom: 2rem;
	}
	h2::after {
		content: "";
		display: block;
		width: 100%;
		height: 2px;
		background-color: var(--base);
		margin-left: 10%;
	}
	@media screen and (max-width: 600px) {
		h2 {
			font-size: clamp(1.5rem, 4vw, 2.5rem);
		}
	}
</style>
